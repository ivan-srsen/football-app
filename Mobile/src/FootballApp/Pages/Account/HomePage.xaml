<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FootballApp.Pages.Account.HomePage"
             NavigationPage.HasNavigationBar="false"
             BackgroundColor="{DynamicResource DarkBackgroundColor}">
    <Grid Padding="10, 5">
        <StackLayout Padding="20, 30" Spacing="20" VerticalOptions="CenterAndExpand">
            <Label Text="Login or create new account"
                   StyleClass="text-lg"
                   HorizontalTextAlignment="Center" />
            <StackLayout Spacing="5">
                <Button Text="Login" StyleClass="btn-primary" Clicked="LogIn_Clicked"/>
                <Button Text="Create account" StyleClass="btn-secondary" Clicked="Register_Clicked"/>
            </StackLayout>
        </StackLayout>
    </Grid>
</ContentPage>